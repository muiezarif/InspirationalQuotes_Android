<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.HomeActivity">
        <include
            android:id="@+id/homeHeader"
            layout="@layout/custom_header"
            app:layout_constraintTop_toTopOf="parent"/>
        <FrameLayout
            android:id="@+id/flhome"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/homeHeader"
            app:layout_constraintBottom_toTopOf="@+id/bnvNavigation"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/dark_grey"
            app:layout_constraintBottom_toTopOf="@+id/bnvNavigation"
            app:layout_constraintTop_toBottomOf="@+id/flhome"/>
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bnvNavigation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:background="@color/white"
            app:itemIconTint="@color/colorBorder"
            app:itemTextColor="@color/colorBorder"
            app:labelVisibilityMode="labeled"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:menu="@menu/home_menu"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>